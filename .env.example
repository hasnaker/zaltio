# =============================================================================
# Zalt - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control
# =============================================================================

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------
AWS_REGION=eu-central-1
AWS_ACCOUNT_ID=your-aws-account-id

# DynamoDB Tables (auto-created by SAM)
DYNAMODB_USERS_TABLE=zalt-users
DYNAMODB_SESSIONS_TABLE=zalt-sessions
DYNAMODB_REALMS_TABLE=zalt-realms
DYNAMODB_AUDIT_TABLE=zalt-audit

# -----------------------------------------------------------------------------
# Authentication Settings
# -----------------------------------------------------------------------------
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_ISSUER=https://api.zalt.io

# Password Hashing
BCRYPT_ROUNDS=12

# Session Settings
SESSION_MAX_CONCURRENT=5
SESSION_IDLE_TIMEOUT=30m

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS (comma-separated origins)
CORS_ALLOWED_ORIGINS=https://zalt.io,https://app.zalt.io

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
# Provider options: ses | gmail | smtp
EMAIL_PROVIDER=gmail

# Option 1: Gmail SMTP (Google Workspace) - Recommended for quick start
GMAIL_USER=noreply@yourdomain.com
GMAIL_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx

# Option 2: Generic SMTP
# EMAIL_PROVIDER=smtp
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password

# Option 3: AWS SES (production, needs production access approval)
# EMAIL_PROVIDER=ses
# SES_REGION=eu-central-1

# Common settings
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=YourApp

# -----------------------------------------------------------------------------
# Dashboard Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=https://api.zalt.io
NEXT_PUBLIC_APP_URL=https://app.zalt.io
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=https://app.zalt.io

# -----------------------------------------------------------------------------
# SSO Configuration (Optional)
# -----------------------------------------------------------------------------
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Microsoft/Azure AD
AZURE_AD_CLIENT_ID=your-azure-client-id
AZURE_AD_CLIENT_SECRET=your-azure-client-secret
AZURE_AD_TENANT_ID=your-azure-tenant-id

# SAML Configuration
SAML_ENTITY_ID=https://api.zalt.io/saml
SAML_CALLBACK_URL=https://api.zalt.io/auth/saml/callback

# -----------------------------------------------------------------------------
# Monitoring & Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info
CLOUDWATCH_LOG_GROUP=/zalt/api
ENABLE_METRICS=true
METRICS_NAMESPACE=Zalt/API

# Sentry (Optional)
SENTRY_DSN=https://your-sentry-dsn

# -----------------------------------------------------------------------------
# Backup Configuration
# -----------------------------------------------------------------------------
BACKUP_S3_BUCKET=zalt-backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_MFA=true
ENABLE_SSO=true
ENABLE_WEBHOOKS=true
ENABLE_AUDIT_LOGS=true
ENABLE_GDPR_FEATURES=true

# -----------------------------------------------------------------------------
# Development Only (DO NOT USE IN PRODUCTION)
# -----------------------------------------------------------------------------
# NODE_ENV=development
# DEBUG=zalt:*
# DISABLE_RATE_LIMIT=false
# MOCK_EMAIL=true
