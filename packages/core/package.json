{
  "name": "@zalt.io/core",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Zalt.io Authentication SDK - Headless TypeScript client",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --sourcemap",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "zalt",
    "authentication",
    "auth",
    "sdk",
    "typescript",
    "jwt",
    "mfa",
    "webauthn",
    "passkey"
  ],
  "author": "Zalt.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zalt-io/zalt-sdk"
  },
  "homepage": "https://zalt.io",
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "fast-check": "^3.15.0"
  },
  "peerDependencies": {},
  "sideEffects": false
}
