{
  "Zalt Provider": {
    "prefix": "zalt-provider",
    "body": [
      "import { ZaltProvider } from '@zalt/react';",
      "",
      "function App() {",
      "  return (",
      "    <ZaltProvider realmId=\"${1:your-realm-id}\">",
      "      ${2:<YourApp />}",
      "    </ZaltProvider>",
      "  );",
      "}"
    ],
    "description": "Zalt React Provider setup"
  },
  "Zalt useAuth Hook": {
    "prefix": "zalt-useauth",
    "body": [
      "import { useAuth } from '@zalt/react';",
      "",
      "function ${1:Component}() {",
      "  const { user, isLoading, isAuthenticated, signIn, signOut } = useAuth();",
      "",
      "  if (isLoading) return <div>Loading...</div>;",
      "",
      "  return (",
      "    <div>",
      "      {isAuthenticated ? (",
      "        <>",
      "          <span>Hello, {user?.email}</span>",
      "          <button onClick={signOut}>Sign Out</button>",
      "        </>",
      "      ) : (",
      "        <button onClick={() => signIn('${2:email}', '${3:password}')}>",
      "          Sign In",
      "        </button>",
      "      )}",
      "    </div>",
      "  );",
      "}"
    ],
    "description": "useAuth hook usage"
  },
  "Zalt SignedIn/SignedOut": {
    "prefix": "zalt-signed",
    "body": [
      "import { SignedIn, SignedOut, UserButton, SignInButton } from '@zalt/react';",
      "",
      "function Header() {",
      "  return (",
      "    <header>",
      "      <SignedIn>",
      "        <UserButton />",
      "      </SignedIn>",
      "      <SignedOut>",
      "        <SignInButton />",
      "      </SignedOut>",
      "    </header>",
      "  );",
      "}"
    ],
    "description": "SignedIn/SignedOut conditional rendering"
  },
  "Zalt Login Form": {
    "prefix": "zalt-login-form",
    "body": [
      "import { useState } from 'react';",
      "import { useAuth } from '@zalt/react';",
      "",
      "function LoginForm() {",
      "  const { signIn, isLoading } = useAuth();",
      "  const [email, setEmail] = useState('');",
      "  const [password, setPassword] = useState('');",
      "  const [error, setError] = useState('');",
      "",
      "  const handleSubmit = async (e: React.FormEvent) => {",
      "    e.preventDefault();",
      "    setError('');",
      "    ",
      "    try {",
      "      const result = await signIn(email, password);",
      "      if (result.mfaRequired) {",
      "        // Redirect to MFA page",
      "      }",
      "    } catch (err) {",
      "      setError('Invalid credentials');",
      "    }",
      "  };",
      "",
      "  return (",
      "    <form onSubmit={handleSubmit}>",
      "      {error && <div className=\"error\">{error}</div>}",
      "      <input",
      "        type=\"email\"",
      "        value={email}",
      "        onChange={(e) => setEmail(e.target.value)}",
      "        placeholder=\"Email\"",
      "        required",
      "      />",
      "      <input",
      "        type=\"password\"",
      "        value={password}",
      "        onChange={(e) => setPassword(e.target.value)}",
      "        placeholder=\"Password\"",
      "        required",
      "      />",
      "      <button type=\"submit\" disabled={isLoading}>",
      "        {isLoading ? 'Signing in...' : 'Sign In'}",
      "      </button>",
      "    </form>",
      "  );",
      "}"
    ],
    "description": "Complete login form component"
  },
  "Zalt MFA Setup Component": {
    "prefix": "zalt-mfa-component",
    "body": [
      "import { useState } from 'react';",
      "import { useMFA } from '@zalt/react';",
      "",
      "function MFASetup() {",
      "  const { setup, verify, isLoading, qrCode } = useMFA();",
      "  const [code, setCode] = useState('');",
      "",
      "  const handleSetup = async () => {",
      "    await setup('totp');",
      "  };",
      "",
      "  const handleVerify = async () => {",
      "    await verify(code);",
      "  };",
      "",
      "  return (",
      "    <div>",
      "      {!qrCode ? (",
      "        <button onClick={handleSetup} disabled={isLoading}>",
      "          Enable Two-Factor Authentication",
      "        </button>",
      "      ) : (",
      "        <div>",
      "          <p>Scan this QR code with your authenticator app:</p>",
      "          <img src={qrCode} alt=\"Scan with authenticator\" />",
      "          <input",
      "            type=\"text\"",
      "            value={code}",
      "            onChange={(e) => setCode(e.target.value)}",
      "            placeholder=\"Enter 6-digit code\"",
      "            maxLength={6}",
      "          />",
      "          <button onClick={handleVerify} disabled={isLoading}>",
      "            Verify",
      "          </button>",
      "        </div>",
      "      )}",
      "    </div>",
      "  );",
      "}"
    ],
    "description": "MFA setup component with TOTP"
  },
  "Zalt Next.js Middleware": {
    "prefix": "zalt-middleware",
    "body": [
      "import { zaltMiddleware } from '@zalt/next';",
      "",
      "export default zaltMiddleware({",
      "  publicRoutes: ['/', '/sign-in', '/sign-up', '/api/webhooks(.*)'],",
      "  signInUrl: '/sign-in',",
      "});",
      "",
      "export const config = {",
      "  matcher: ['/((?!_next|.*\\\\..*).*)'],",
      "};"
    ],
    "description": "Next.js middleware for route protection"
  },
  "Zalt Server Auth": {
    "prefix": "zalt-server-auth",
    "body": [
      "import { getAuth, currentUser } from '@zalt/next';",
      "",
      "export default async function ${1:Page}() {",
      "  const { userId } = await getAuth();",
      "  const user = await currentUser();",
      "",
      "  if (!userId) {",
      "    return <div>Not authenticated</div>;",
      "  }",
      "",
      "  return (",
      "    <div>",
      "      <h1>Welcome, {user?.email}</h1>",
      "      ${2:/* Your content */}",
      "    </div>",
      "  );",
      "}"
    ],
    "description": "Server-side authentication in Next.js"
  }
}
