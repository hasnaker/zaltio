{
  "name": "@zalt/api",
  "version": "1.0.0",
  "description": "Zalt - Authentication-as-a-Service Platform",
  "main": "dist/index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "sdk:build": "npm run build --workspaces",
    "sdk:test": "npm run test --workspaces",
    "sdk:publish": "npm publish --workspaces --access public",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:e2e:local": "E2E_API_ENDPOINT=http://localhost:3000 npm run test:e2e",
    "test:security": "jest --testPathPattern=tests/security --verbose",
    "test:security:owasp": "jest --testPathPattern=tests/security/owasp --verbose",
    "test:security:pentest": "jest --testPathPattern=tests/security/penetration --verbose",
    "test:security:compliance": "jest --testPathPattern=tests/security/compliance --verbose",
    "test:security:vuln": "jest --testPathPattern=tests/security/vulnerability --verbose",
    "test:security:session": "jest --testPathPattern=session-hijacking --verbose",
    "test:security:jwt": "jest --testPathPattern=jwt-security --verbose",
    "test:security:ratelimit": "jest --testPathPattern=rate-limiting --verbose",
    "test:coverage": "jest --coverage",
    "security:audit": "npm audit --audit-level=moderate",
    "security:audit:fix": "npm audit fix",
    "lint": "eslint src --ext .ts",
    "deploy": "./scripts/deploy.sh",
    "deploy:prod": "./scripts/deploy.sh production",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:dev": "./scripts/deploy.sh development",
    "validate": "sam validate --lint",
    "sam:build": "sam build",
    "sam:local": "sam local start-api"
  },
  "keywords": [
    "authentication",
    "aws",
    "lambda",
    "dynamodb",
    "auth",
    "zalt"
  ],
  "author": "Zalt",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.131",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.6",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.980.0",
    "@aws-sdk/client-cloudwatch": "^3.966.0",
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/client-kms": "^3.970.0",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/client-secrets-manager": "^3.490.0",
    "@aws-sdk/client-ses": "^3.969.0",
    "@aws-sdk/client-sns": "^3.975.0",
    "@aws-sdk/client-sqs": "^3.980.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "@types/nodemailer": "^7.0.5",
    "@types/uuid": "^10.0.0",
    "argon2": "^0.31.2",
    "bcryptjs": "^2.4.3",
    "hash-wasm": "^4.12.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.12",
    "stripe": "^20.3.0",
    "uuid": "^13.0.0"
  },
  "directories": {
    "doc": "docs"
  },
  "type": "commonjs"
}
