{
  "name": "@zalt/auth-sdk",
  "version": "1.0.0",
  "description": "Official TypeScript SDK for Zalt.io Authentication Platform - Enterprise-grade auth for healthcare and beyond",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist",
    "build:esm": "tsc -p tsconfig.build.json --module esnext --outDir dist/esm && mv dist/esm/*.js dist/ && rm -rf dist/esm",
    "build:types": "tsc -p tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "zalt",
    "zalt.io",
    "auth",
    "authentication",
    "sdk",
    "typescript",
    "jwt",
    "oauth",
    "mfa",
    "webauthn",
    "passkey",
    "hipaa",
    "gdpr",
    "healthcare",
    "enterprise"
  ],
  "author": "Zalt.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zalt-io/auth-sdk.git"
  },
  "homepage": "https://zalt.io/docs/sdk",
  "bugs": {
    "url": "https://github.com/zalt-io/auth-sdk/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
